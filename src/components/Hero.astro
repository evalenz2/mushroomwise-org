---
import Button from './Button.astro';
---

<section class="relative bg-teal-700 text-white overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
      <defs>
        <pattern id="mushroom-pattern" patternUnits="userSpaceOnUse" width="100" height="100" patternTransform="rotate(45)">
          <path d="M50,0 C60,20 90,20 100,30 L100,50 C90,60 80,90 70,100 L30,100 C20,90 10,60 0,50 L0,30 C10,20 40,20 50,0" fill="none" stroke="currentColor" stroke-width="1"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#mushroom-pattern)"></rect>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32 relative z-10">
    <div class="text-center md:text-left md:max-w-3xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
        Discover the Fascinating World of Mushrooms
      </h1>
      <p class="text-xl md:text-2xl opacity-90 mb-8">
        Education, identification, cultivation, and a supportive community for mushroom enthusiasts of all levels.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <Button href="#free-guide" isPrimary={true}>
          Get Your Free Mushroom Guide
        </Button>
        <Button href="/community">
          Join Our Community
        </Button>
      </div>
    </div>
  </div>
</section>
