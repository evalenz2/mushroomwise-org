---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import MissionBenefits from '../components/MissionBenefits.astro';
import LeadMagnet from '../components/LeadMagnet.astro';
import Testimonials from '../components/Testimonials.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import Button from '../components/Button.astro';
---

<Layout 
  title="MushroomWise - Discover the Power of Mushrooms for a Longer, Stronger, Clearer Life" 
  description="Join our community to learn, connect, and thrive with science-backed mushroom wellness. MushroomWise.org provides accessible education, community support, and trusted resources for your mushroom journey."
>
  <Hero />
  
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">Your Journey to Mushroom Wellness</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-3xl mx-auto">
        <a href="/learn" class="group">
          <div class="bg-amber-100 text-amber-700 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center group-hover:bg-amber-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Learn</h3>
          <p class="text-gray-600">Science-backed guides on mushroom benefits, dosages, and safety</p>
        </a>
        
        <a href="/community" class="group">
          <div class="bg-teal-100 text-teal-700 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center group-hover:bg-teal-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Connect</h3>
          <p class="text-gray-600">Join our community for stories, challenges, and support</p>
        </a>
        
        <a href="https://mushroomalive.com" class="group">
          <div class="bg-blue-100 text-blue-700 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Shop</h3>
          <p class="text-gray-600">Discover our premium mushroom tinctures at MushroomAlive</p>
        </a>
      </div>
    </div>
  </section>
  
  <MissionBenefits />
  <LeadMagnet />
  <Testimonials />
  <NewsletterSignup />

  <section class="py-16 bg-teal-700 text-white text-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Transform Your Wellness Journey?</h2>
      <p class="text-xl opacity-90 mb-8">
        Join our community of mushroom enthusiasts and discover the power of functional mushrooms for a longer, stronger, clearer life.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/community" isPrimary={true} isLarge={true}>
          Join Our Community
        </Button>
        <Button href="/learn" isLarge={true}>
          Explore Free Guides
        </Button>
      </div>
    </div>
  </section>
</Layout>
